{
    "git.autofetch": true,
    "gitdoc.enabled": true,
    "gitdoc.commitMessageFormat": "ccc, LLL d, kkkk, h:mm a ZZ",
    "flake8.args": [
        "--max-line-length=100",
        "--ignore=E741,F401,F841"
    ],
    "pylint.args": [
        "W0612"
    ],
    "mypy-type-checker.args": [
        "var-annotated"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "files.insertFinalNewline": true,
}
